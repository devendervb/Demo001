<mvc:View xmlns:core="sap.ui.core" controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page">
       <content>
          	<Table id="idProductsTable"
		inset="false"
		items="{
			path: '/Books'
		}" selectionChange=".onTableChange">
        	<headerToolbar>
			<OverflowToolbar>
				<content>
					<Title text="Products" level="H2"/>
					<ToolbarSpacer />			
					<Button text="Create" id="idbtn" press=".onCreate"></Button>  
					<Button text="Update" id="idupd" press=".onUpdate"></Button>                   
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column id="col1"
				width="12em">
				<Text text="ID" id="txt1"/>
			</Column>
			<Column id="col2"
				width="12em">
				<Text text="Title" id="txt2"/>
			</Column>
            <Column id="col3"
				width="12em">
				<Text text="Author" id="txt3"/>
			</Column>
            <Column id="col4"
				width="12em">
				<Text text="Price" id="txt4"/>
			</Column>
            <Column id="col5"
				width="12em">
				<Text text="Stock" id="txt5"/>
			</Column>
			<Column id="col6"
				width="12em">
				<Text text="Action" id="txt6"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<Input value="{ID}" editable="false"/>
                    <Input value="{title}" editable="false"/>
                    <Input value="{author}" editable="false"/>
                    <Input value="{price}" editable="false"/>
                    <Input value="{stock}" editable="false"/>
				<HBox>
					<Button icon="sap-icon://edit"
						type="Transparent"
						visible="true"
						press=".onEditRow" />
					<Button icon="sap-icon://delete"
						type="Transparent"
						visible="true"
						press=".onDeleteRow" />	

					<Button icon="sap-icon://save"
							type="Transparent"
							visible="false"
							press=".onSaveRow" />
					<Button icon="sap-icon://cancel"
							type="Transparent"
							visible="false"
							press=".onSaveRow" />		
				</HBox>	
				
				</cells>
			</ColumnListItem>
		</items>
	</Table>
       </content>
    </Page>
</mvc:View>